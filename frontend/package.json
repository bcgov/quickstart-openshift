    "@types/react-dom": "^19.0.4",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^7.0.0",
    "typescript-eslint": "^8.46.2",
    "jsdom": "^27.0.0",
    "msw": "^2.7.3",
    "playwright": "^1.51.0",
    "prettier": "^3.5.3",
    "sass": "^1.85.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.0"
